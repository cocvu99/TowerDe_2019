  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.towerde_2019:jar" value="${basedir}/out/artifacts/TowerDe_2019_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.TowerDe_2019.jar" value="${artifacts.temp.dir}/TowerDe_2019.jar"/>
  </target>
  
  <target name="artifact.towerde_2019:jar" depends="init.artifacts, compile.module.towerde_2019" description="Build &#39;TowerDe_2019:jar&#39; artifact">
    <property name="artifact.temp.output.towerde_2019:jar" value="${artifacts.temp.dir}/TowerDe_2019_jar"/>
    <mkdir dir="${artifact.temp.output.towerde_2019:jar}"/>
    <jar destfile="${temp.jar.path.TowerDe_2019.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${towerde_2019.output.dir}"/>
      <zipfileset dir="C:/Users/Fang/OneDrive - vnu.edu.vn/java-game/TowerDe_2019/src"/>
      <zipfileset dir="${basedir}/res"/>
    </jar>
    <copy file="${temp.jar.path.TowerDe_2019.jar}" tofile="${artifact.temp.output.towerde_2019:jar}/TowerDe_2019.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.towerde_2019:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.towerde_2019:jar}"/>
    <copy todir="${artifact.output.towerde_2019:jar}">
      <fileset dir="${artifact.temp.output.towerde_2019:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
